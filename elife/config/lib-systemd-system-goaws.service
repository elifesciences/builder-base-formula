[Unit]
Description="GOAWS local AWS server"
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
Restart=on-failure
TimeoutStopSec=10
User={{ pillar.elife.deploy_user.username }}
WorkingDirectory=/home/{{ pillar.elife.deploy_user.username }}
Environment="HOME=/home/{{ pillar.elife.deploy_user.username }}"
ExecStart=/usr/local/bin/goaws
